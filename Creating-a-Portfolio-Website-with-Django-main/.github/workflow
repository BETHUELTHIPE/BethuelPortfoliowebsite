name: Django CI

on:
  push:
    branches: [ "main" ]
    paths:
      - "bash-scripts/**"  # Trigger on changes in the bash-scripts directory
  pull_request:
    branches: [ "main" ]
    paths:
      - "bash-scripts/**"  # Trigger on pull requests affecting bash-scripts

jobs:
  build:

    runs-on: ubuntu-latest

    services:
      db:
        image: postgres:latest
        env:
          POSTGRES_DB: Bethuelresumedb
          POSTGRES_USER: Bethuel
          POSTGRES_PASSWORD: 23498812
        ports:
          - 5432:5432
        volumes:
          - pg_data:/var/lib/postgresql/data

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2

    - name: Log in to Docker Hub
      uses: docker/login-action@v2
      with:
        username: ${{ secrets.DOCKER_USERNAME }}  # Add your Docker Hub username to Secrets
        password: ${{ secrets.DOCKER_PASSWORD }}  # Add your Docker Hub password to Secrets

    - name: Build Docker image
      run: docker build . -t your-docker-repo-name:latest

    - name: Run tests
      run: |
        docker-compose up -d
        docker-compose exec web python manage.py test  # Adjust if necessary
        docker-compose down

    - name: Push Docker image to Docker Hub
      run: docker push your-docker-repo-name:latest

volumes:
  pg_data:
